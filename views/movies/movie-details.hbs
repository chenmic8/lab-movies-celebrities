<h1>movie details</h1>
<p>Title: {{title}}</p>
<p>Genre: {{genre}}</p>
<p>Plot: {{plot}}</p>
<br />
<h3>Cast: </h3>
<ul>
  {{#each cast}}
    <li>
      <p>Name: {{name}}</p>
      <p>Occupation: {{occupation}}</p>
      <p>Catch phrase: {{catchPhrase}}</p>
    </li>
  {{/each}}
</ul>
<form action="/movies/delete/{{_id}}">
  <button type="submit">Delete this movie</button>
</form>
<form action="/movies/update/{{_id}}">
  <button type="submit">Update this movie</button>
</form>